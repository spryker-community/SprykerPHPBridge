{
  "name": "engineered/sprykerphpbridge",
  "description": "A PHP wrapper for the Spryker Glue API",
  "minimum-stability": "stable",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ray Lawlor",
      "email": "ray.lawlor@veriteer.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "gacela-project/gacela": "^1.5",
    "symfony/console": "^5.4",
    "symfony/http-client": "^6.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.16",
    "gacela-project/phpstan-extension": "^0.3",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "roave/security-advisories": "dev-latest",
    "symfony/var-dumper": "^6.0",
    "vimeo/psalm": "^5.10"
  },
  "config": {
    "platform": {
      "php": "8.0.25"
    }
  },
  "autoload": {
    "psr-4": {
      "Engineered\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EngineeredTests\\": "tests/"
    }
  },
  "scripts": {
    "test-all": [
      "@quality",
      "@phpunit"
    ],
    "quality": [
      "@csrun",
      "@psalm",
      "@phpstan"
    ],
    "phpunit": [
      "@test-unit"
    ],
    "csrun": "./vendor/bin/php-cs-fixer fix --dry-run",
    "psalm": "./vendor/bin/psalm",
    "phpstan": "./vendor/bin/phpstan analyze",
    "csfix": "./vendor/bin/php-cs-fixer fix",
    "test-unit": "./vendor/bin/phpunit --testsuite=unit",
    "static-clear-cache": [
      "vendor/bin/psalm --clear-cache",
      "vendor/bin/phpstan clear-result-cache"
    ]
  }
}
